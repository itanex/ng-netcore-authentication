<!DOCTYPE html>
<html ng-app="app" ng-strict-di>
<head>
    <base href="/" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Angular Authentication</title>

    <link rel="stylesheet" href="~/css/site.min.css" />
</head>
<body ng-cloak ng-controller="ApplicationController as vm">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a ui-sref="Home" class="navbar-brand">Angular Authentication</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a ui-sref="Home">Home</a></li>
                    <li><a ui-sref="About">About</a></li>
                    <li><a ui-sref="Contact">Contact</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right" ng-if="!vm.isUserLoggedIn">
                    <li><a ui-sref="Register">Register</a></li>
                    <li><a ui-sref="Login">Log in</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right" ng-if="vm.isUserLoggedIn">
                    <li><a>{{vm.user.userName}}</a></li>
                    <li><a href="" ng-click="vm.logOut()">Sign Out</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - Angular Authentication</p>
        </footer>
    </div>

    <!-- Third Party Dependencies -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/lib/angular-resource/angular-resource.min.js"></script>
    <script src="~/lib/angular-ui-router/release/angular-ui-router.min.js"></script>

    <!-- Application -->
    <script src="~/js/models/user.model.js"></script>
    <script src="~/js/models/forgotpassword.model.js"></script>
    <script src="~/js/models/login.model.js"></script>
    <script src="~/js/models/register.model.js"></script>

    <script src="~/js/views/forgotpassword/forgotpassword.controller.js"></script>
    <script src="~/js/views/forgotpassword/forgotpassword.config.js"></script>
    <script src="~/js/views/forgotpassword/forgotpassword.js"></script>

    <script src="~/js/views/login/login.controller.js"></script>
    <script src="~/js/views/login/login.config.js"></script>
    <script src="~/js/views/login/login.js"></script>

    <script src="~/js/views/register/register.controller.js"></script>
    <script src="~/js/views/register/register.config.js"></script>
    <script src="~/js/views/register/register.js"></script>

    <script src="~/js/views/contact/contact.controller.js"></script>
    <script src="~/js/views/contact/contact.config.js"></script>
    <script src="~/js/views/contact/contact.js"></script>

    <script src="~/js/views/about/about.controller.js"></script>
    <script src="~/js/views/about/about.config.js"></script>
    <script src="~/js/views/about/about.js"></script>

    <script src="~/js/views/home/home.controller.js"></script>
    <script src="~/js/views/home/home.config.js"></script>
    <script src="~/js/views/home/home.js"></script>

    <script src="~/js/views/views.js"></script>

    <script src="~/js/factories/authenticationinterceptor.js"></script>
    <script src="~/js/factories/factories.js"></script>

    <script src="~/js/services/user.service.js"></script>
    <script src="~/js/services/registration.service.js"></script>
    <script src="~/js/services/services.js"></script>

    <script src="~/js/app.controller.js"></script>
    <script src="~/js/app.config.js"></script>
    <script src="~/js/app.run.js"></script>
    <script src="~/js/app.js"></script>
</body>
</html>
